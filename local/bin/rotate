#!/bin/bash -e
APPEND_STRING=$1
APP_NAME="hello-world"

if [[ -z "$APPEND_STRING" ]]
  then
    APPEND_STRING=$RANDOM
fi


if [[ "$CONJUR_VERSION" -eq "5" ]]
then
  api_key=$(docker-compose exec -T conjur_5 bash -c 'rails r "puts Role[%Q{default:user:pcf-admin}].api_key" 2>/dev/null')

  # rotate secret values
  docker-compose run --rm \
    -e CONJUR_AUTHN_API_KEY="$api_key" \
    -e CONJUR_AUTHN_LOGIN=pcf-admin \
    -e APPEND_STRING="$APPEND_STRING" \
    --entrypoint bash client -c '
      conjur variable values add pcf/app/database/username "a database username $APPEND_STRING"
      conjur variable values add pcf/app/database/password "a database password $APPEND_STRING"
      conjur variable values add pcf/app/stripe/private_key "a stripe private_key $APPEND_STRING"
    '
else
  api_key=$(docker-compose exec -T conjur_4 su conjur -c "conjur-plugin-service authn env RAILS_ENV=appliance rails r \"puts User['pcf-admin'].api_key\" 2>/dev/null")

  # rotate secret values
  docker-compose run --rm \
    -e CONJUR_AUTHN_LOGIN=pcf-admin \
    -e CONJUR_AUTHN_API_KEY=$api_key \
    --entrypoint bash conjur_4 -c '
      conjur variable values add pcf/app/database/username "a database username $APPEND_STRING"
      conjur variable values add pcf/app/database/password "a database password $APPEND_STRING"
      conjur variable values add pcf/app/stripe/private_key "a stripe private_key $APPEND_STRING"
    '
fi

cf restage $APP_NAME

echo -e "\n\nThe secret values have been updated by appending '$APPEND_STRING'"
echo -e "\nThe app has been restaged, and it is now available at $(cf app $APP_NAME | grep routes | awk '{print $NF}')\n"
